@model QuickLocal.Models.AddService

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #EBEDEF;
    }
    .center-content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Adjust the height as needed */
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="center-content">
    <div class="card p-4">
        <h4 class="card-title">Delete</h4>

        <h2>Are you sure you want to delete this?</h2>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NameOfProvider)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NameOfProvider)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Services)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Services)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PinCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PinCode)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section scripts {
    <script>
        // Add autocomplete attributes to form fields
        document.addEventListener("DOMContentLoaded", function () {
            var form = document.querySelector("form[asp-action='Delete']");

            // Add autocomplete attributes to specific fields
            form.querySelector("[name='NameOfProvider']").setAttribute("autocomplete", "organization");
            form.querySelector("[name='Phone']").setAttribute("autocomplete", "tel");
            form.querySelector("[name='Email']").setAttribute("autocomplete", "email");
            form.querySelector("[name='Services']").setAttribute("autocomplete", "off");
            form.querySelector("[name='Address']").setAttribute("autocomplete", "street-address");
            form.querySelector("[name='City']").setAttribute("autocomplete", "address-level2");
            form.querySelector("[name='PinCode']").setAttribute("autocomplete", "postal-code");
        });
    </script>
}
