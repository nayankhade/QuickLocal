package com.quicklocal.service;

import com.quicklocal.model.ServicesModel;
import com.quicklocal.repository.UserOrdersRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class UserOrdersService {

    @Autowired
    private UserOrdersRepository userOrdersRepository;

    public List<ServicesModel> getAllUserOrders() {
        return userOrdersRepository.findAll();
    }

    public void addServiceToUserOrder(Integer userId, Integer serviceId) {
        // Fetch the user order by user ID
        UserOrder userOrder = userOrdersRepository.findByUserId(userId);

        // Fetch the service by service ID
        ServicesModel service = servicesRepository.findById(serviceId).orElse(null);

        if (userOrder != null && service != null) {
            // Add the service to the user's order
            userOrder.getServices().add(service);

            // Save the updated user order
            userOrdersRepository.save(userOrder);
        }
    }
}
