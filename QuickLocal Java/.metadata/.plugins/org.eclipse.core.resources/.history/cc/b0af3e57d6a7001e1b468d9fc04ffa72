package com.quicklocal.service;

import com.quicklocal.dto.ServicesDto;
import com.quicklocal.model.ServicesModel;
import com.quicklocal.repository.ServicesRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;
import java.util.Base64;
import java.util.List;

@Service
public class ServicesService {

    @Autowired
    private ServicesRepository servicesRepository;

    public ServicesModel saveService(ServicesDto servicesDto, MultipartFile photo) throws IOException {
        ServicesModel serviceModel = new ServicesModel();
        serviceModel.setName(servicesDto.getName());
        serviceModel.setPhone(servicesDto.getPhone());
        serviceModel.setEmail(servicesDto.getEmail());
        serviceModel.setService(servicesDto.getService());
        serviceModel.setAddress(servicesDto.getAddress());
        serviceModel.setCity(servicesDto.getCity());
        serviceModel.setPinCode(servicesDto.getPinCode());

        // Convert and save the photo as Base64
        serviceModel.setPhoto(convertToBase64(photo));

        // Save the service to the database
        return servicesRepository.save(serviceModel);
    }

    private String convertToBase64(MultipartFile photo) throws IOException {
        byte[] bytes = photo.getBytes();
        return Base64.getEncoder().encodeToString(bytes);
    }

    public List<ServicesModel> getAllServices() {
        return servicesRepository.findAll();
    }
    // Other service methods...

}
