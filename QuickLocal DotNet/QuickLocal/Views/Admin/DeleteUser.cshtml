@model UserView

@{
    ViewData["Title"] = "DeleteUser";
}

<style>
    body {
        background-color: #EBEDEF;
    }
    .card {
        border: 1px solid #ddd;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
        width: 55rem;
        margin: auto;
        margin-top: 20px;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        background-color: #dc3545;
        color: #fff;
        font-weight: bold;
    }

    .card-body dt {
        font-weight: bold;
    }

    .btn-delete {
        width: 100%;
        margin-top: 6px;
        background-color: #dc3545;
        border-color: #dc3545;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .btn-delete:hover {
            background-color: #c82333;
            border-color: #c82333;
            color: #fff;
        }

    .btn-back {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
        font-weight: bold;
        color: white;
    }

        .btn-back:hover {
            color: white;

        }
</style>

<h1>DeleteUser</h1>

<div class="card">
    <div class="card-header">
        Delete User
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Firstname)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Firstname)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Lastname)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Lastname)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Role)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteUser">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-delete" /> |
            <a asp-action="Index" class="btn btn-secondary btn-back">Back to List</a>
        </form>
    </div>
</div>
