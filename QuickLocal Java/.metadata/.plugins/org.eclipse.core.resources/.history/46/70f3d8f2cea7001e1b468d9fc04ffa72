package com.quicklocal.service;

import com.quicklocal.dto.ServicesDto;
import com.quicklocal.model.ServicesModel;
import com.quicklocal.repository.ServicesRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;
import java.util.Base64;

@Service
public class ServicesService {

    @Autowired
    private ServicesRepository servicesRepository;

    public ServicesModel saveService(ServicesDto servicesDto, MultipartFile photo) throws IOException {
        ServicesModel serviceModel = new ServicesModel();
        // Map other fields
        serviceModel.setPhoto(convertToBase64(photo)); // Convert MultipartFile to Base64 and save

        return servicesRepository.save(serviceModel);
    }

    private String convertToBase64(MultipartFile file) throws IOException {
        byte[] bytes = file.getBytes();
        return Base64.getEncoder().encodeToString(bytes);
    }

    // Other service methods...

}
